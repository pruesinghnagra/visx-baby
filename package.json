{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "The one boilerplate for all",
  "main": "server/index.js",
  "scripts": {
    "start": "run-p webpack server",
    "dev": "run-p client dev:server",
    "webpack": "webpack --config ./client/webpack.config.js",
    "knex": "knex --knexfile ./server/db/knexfile.js",
    "client": "npm run webpack -- --watch",
    "server": "node index",
    "dev:server": "nodemon index",
    "lint": "eslint .",
    "test": "jest --watchAll --verbose"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pruesinghnagra/boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "fullstack"
  ],
  "author": "Prue Singh",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pruesinghnagra/boilerplate/issues"
  },
  "homepage": "https://github.com/pruesinghnagra/boilerplate#readme",
  "dependencies": {
    "express": "^4.17.1",
    "knex": "^0.21.12",
    "pg": "^8.5.1",
    "sqlite3": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "autoprefixer": "^10.2.4",
    "babel-loader": "^8.2.1",
    "css-loader": "^5.0.1",
    "css-minimizer-webpack-plugin": "^2.0.0",
    "eslint": "^7.13.0",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.6.0",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.6",
    "postcss-loader": "^5.0.0",
    "precss": "^4.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "style-loader": "^2.0.0",
    "supertest": "^6.0.1",
    "tailwindcss": "^2.0.3",
    "webpack": "^5.6.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  }
}
